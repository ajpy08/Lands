<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout
            Padding="10,20,10,5">
            
            <Label 
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                Text="Lands"
                />
            <Image
                Source="logo200.png"
                WidthRequest="200">
            </Image>
            <Label
                Text="E-mail">                
            </Label>
            <Entry
                Keyboard="Email"
                Placeholder="Entry your E-mail">                
            </Entry>
            <Label
                Text="Password">
            </Label>
            <Entry
                IsPassword="True"
                Placeholder="Entry your password">
            </Entry>
            <ActivityIndicator>
            </ActivityIndicator>

            <Button
                BackgroundColor="Navy"
                BorderRadius="23"
                Text="Login"
                TextColor="White">                
            </Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>